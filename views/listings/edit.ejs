<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <form action="/listings/<%= listing._id %>/?_method=PUT" method="POST">
      <h3>Edit this Listings !!!</h3>
      <div class="mb-3 ">
        <label for="title" class="form-label">Title</label>
        <input type="text" value="<%=listing.title%>" name="listing[title]" class="form-control"/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"></label>
        <textarea name="listing[description]" rows="10" cols="50" class="form-control">
          <%=listing.description%>
        </textarea>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
        type="text"
        value="<%=listing.image%>"
        name="listing[image]" class="form-control"/>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
          type="number"
          value="<%=listing.price%>"
          name="listing[price]" class="form-control"/>
        </div>
  
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
          type="text"
          value="<%=listing.location%>"
          name="listing[location]" class="form-control"/>
        </div>
      </div>
      
      
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
        type="text"
        value="<%=listing.country%>"
        name="listing[country]" class="form-control"/>
      </div>
      
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>


